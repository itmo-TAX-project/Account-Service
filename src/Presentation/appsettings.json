{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8082",
        "Protocols": "Http1AndHttp2"
      }
    }
  },
  "Postgres": {
    "Host": "localhost",
    "Port": 5402,
    "Database": "postgres",
    "Username": "postgres",
    "Password": "postgres",
    "SslMode": "Prefer"
  },
  "MessagePersistence": {
    "SchemaName": "message_persistence",
    "Publisher": {
      "Default": {
        "BatchSize": 10,
        "PollingDelay": "00:00:00.500"
      }
    }
  },
  "Kafka": {
    "Host": "localhost:8001",
    "Producers": {
      "PassengerCreatedMessage": {
        "Topic": "passenger.added",
        "Outbox": {
          "BatchSize": 10,
          "PollingDelay": "00:00:00.500"
        }
      },
      "DriverCreatedMessage": {
        "Topic": "driver.added",
        "Outbox": {
          "BatchSize": 10,
          "PollingDelay": "00:00:00.500"
        }
      },
      "AdminCreatedMessage": {
        "Topic": "admin.added",
        "Outbox": {
          "BatchSize": 10,
          "PollingDelay": "00:00:00.500"
        }
      }
    },
    "Consumers": {
      "AccountCreatedMessage": {
        "IsDisabled": false,
        "Topic": "account.created",
        "Group": "Account-Service",
        "Inbox": {
          "BatchSize": 10,
          "PollingDelay": "00:00:00.500"
        }
      }
    }
  }
}